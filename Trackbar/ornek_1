import cv2
import numpy as np

def nothing(x):
    pass

resim = np.zeros((512,512,3),np.uint8)

cv2.namedWindow("Parlaklik Ayarlar覺")

cv2.createTrackbar("Parlaklik","Parlaklik Ayarlar覺",0,255,nothing)

while 1: 
    
    cv2.imshow("Parlaklik Ayarlar覺", resim)
 
    if cv2.waitKey(1) == ord("q"):
        break
    
    parlaklik = cv2.getTrackbarPos("Parlaklik", "Parlaklik Ayarlar覺") 
    resim[:] = [parlaklik,parlaklik,parlaklik]

cv2.destroyAllWindows()
